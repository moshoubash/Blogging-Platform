@{
    ViewData["Title"] = "List Of Articles";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Created At</th>
                <th>Management</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var x in Model)
                {
                    <tr>
                        <td>@x.ArticleId</td>
                        <td>@x.ArticleTitle</td>
                        <td>@x.CreatedAt</td>
                        <td>
                            <a href="/Article/Delete/@x.ArticleId" class="btn btn-danger">Delete</a>
                            <a href="/Article/Edit/@x.ArticleId" class="btn btn-primary">Edit</a>
                            <a href="/Article/Details/@x.ArticleId" class="btn btn-info">Details</a>
                        </td>
                    </tr>    
                }
            }
        </tbody>
    </table>
</div>