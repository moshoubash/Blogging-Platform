@using Blogging_Platform.Models;
@model List<Article>
@{
    ViewData["Title"] = "Search";
}

<h1>Search on Articles</h1>

<form method="get" action="/Article/Search">
    <div class="form-group" style="display:flex;">
        <input type="text" class="form-control" id="searchbar" name="query" />
        <button type="submit" class="btn btn-dark"><i class="fa-solid fa-magnifying-glass"></i></button>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <h2>Search Results:</h2>
    @foreach (var article in Model)
    {
        <a href="/Article/Details/@article.ArticleId" style="text-decoration:none;">@article.ArticleTitle</a>
        <br />
    }
}
else if (Model != null)
{
    <p>No articles found.</p>
}
