@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Pages/Shared/_AuthenticationLayout.cshtml";
}

<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form id="signInForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <h3 class="mb-5">Sign in</h3>
                        
                            @*Activate validation for form*@
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            @*Email entry*@
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="Input.Email" class="form-label" for="typeEmailX-2">Email</label>
                                <input asp-for="Input.Email" type="email" id="typeEmailX-2" class="form-control form-control-lg" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            @*Password entry*@
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="Input.Password" class="form-label" for="typePasswordX-2">Password</label>
                                <input asp-for="Input.Password" type="password" id="typePasswordX-2" class="form-control form-control-lg" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <!-- Checkbox -->
                            <div class="form-check d-flex justify-content-center mb-4">
                                <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="form1Example3" /> 
                                <label asp-for="Input.RememberMe" class="form-check-label" for="form1Example3" style="margin-left:5px;"> Remember Me </label>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>

                            <hr class="my-4">

                            @* Third-party
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-lg btn-block btn-primary" style="background-color: #dd4b39;"
                                    type="submit">
                                <i class="fab fa-google me-2"></i> Sign in with google
                            </button>
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-lg btn-block btn-primary mb-2" style="background-color: #3b5998;"
                                    type="submit">
                                <i class="fab fa-facebook-f me-2"></i>Sign in with facebook
                            </button> *@

                            <div>
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
